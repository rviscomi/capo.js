{
  "name": "@rviscomi/capo.js",
  "version": "2.0.0-beta.1",
  "description": "Get your ï¹¤ğš‘ğšğšŠğšï¹¥ in order",
  "author": "Rick Viscomi",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rviscomi/capo.js.git"
  },
  "bugs": {
    "url": "https://github.com/rviscomi/capo.js/issues"
  },
  "homepage": "https://rviscomi.github.io/capo.js/",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./core": "./src/core/analyzer.js",
    "./adapters": "./src/adapters/index.js",
    "./adapters/browser": "./src/adapters/browser.js",
    "./rules": "./src/lib/rules.js",
    "./validation": "./src/lib/validation.js",
    "./adapters/test-suite": "./src/adapters/test-suite.js"
  },
  "directories": {
    "doc": "docs"
  },
  "targets": {
    "crx": {
      "source": "src/crx/capo.js",
      "distDir": "crx",
      "sourceMap": false
    },
    "crx-options": {
      "source": "src/crx/options.js",
      "distDir": "crx/options",
      "sourceMap": false
    },
    "web": {
      "source": "src/web/capo.js",
      "distDir": "docs/src/lib",
      "outputFormat": "esmodule",
      "isLibrary": true,
      "sourceMap": false
    }
  },
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage tests/**/*.test.js",
    "test:rules": "node --test tests/lib/rules.test.js",
    "test:validation": "node --test tests/lib/validation.test.js",
    "test:integration": "node --test tests/integration/*.test.js",
    "test:snapshots": "node --test tests/snapshots/*.test.js"
  },
  "devDependencies": {
    "dedent": "^1.7.0",
    "jsdom": "^27.0.1",
    "parcel": "latest"
  }
}
